@model IEnumerable<backend.Models.TiposFormacao>
@{
    ViewBag.Title = "Editar Formação";
    var formacao = (backend.Models.Formacao)ViewData["formacao"];
}
<div class="row">
    <div class="col-md-6">
        <h1>Editar Formação</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/Formacao/EditarAction" method="post">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input name="nome" type="text" class="form-control" id="nome" value="@formacao.Nome">
            </div>
            <div class="mb-3">
                <label for="instituicao" class="form-label">Instituição</label>
                <input name="instituicao" type="text" class="form-control" id="instituicao" value="@formacao.Instituicao">
            </div>
            <div class="mb-3">
                <label for="inicio" class="form-label">Inicio</label>
                <input name="inicio" type="text" class="form-control" id="inicio" value="@formacao.Inicio">
            </div>
            <div class="mb-3">
                <label for="conclusao" class="form-label">Conclusão</label>
                <input name="conclusao" type="text" class="form-control" id="conclusao" value="@formacao.Conclusao">
            </div>
            <div class="form-floating mb-3">
                <textarea name="resumo" class="form-control" placeholder="Resumo das atividades" id="floatingTextarea2" style="height: 200px">@formacao.Resumo</textarea>
                <label for="floatingTextarea2">Resumo das atividades</label>
            </div>
            <div class="form-floating mb-3">
                <select name="tipoFormacao" class="form-select" id="floatingSelectGrid" aria-label="Tipo de Formação">
                    @foreach (var tipoFormacao in Model)
                    {
                        <option value="@Html.DisplayFor(id => tipoFormacao.Id)" @(tipoFormacao.Id == formacao.TipoFormacaoId ? "selected" : "2131")>@Html.DisplayFor(id => tipoFormacao.Nome)</option>
                    }
                </select>
                <label for="floatingSelectGrid">Tipo de Formação</label>
            </div>
            <input type="hidden" name="id" value="@formacao.Id" />
            <button type="submit" class="btn btn-success">Editar Formação</button>
        </form>
    </div>
</div>