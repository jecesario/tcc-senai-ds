@using PagedList.Mvc;
@model PagedList.PagedList<backend.Models.Dtos.ListarVagasResponse>
@{
    ViewBag.Title = "Vagas - Listar";
    var vagas = Model;
}
@if (@TempData["alertInfo"] != null) {
    <div class="alert alert-info" role="alert">
        @TempData["alertInfo"]
    </div>
}
@if (@TempData["alertSucesso"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["alertSucesso"]
    </div>
}
@if (@TempData["alertErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["alertErro"]
    </div>
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Content/Css/jobs.css" rel="stylesheet" />
<div id="users-container" class="dashboard-container">
    <h1 class="page-title">Cursos</h1>
    <div class="search">
        <form action="/Curso/Buscar" method="get">
            <div class="input-container">
                <label for="buscar">Pesquisar</label>
                <input name="nome" type="text" id="buscar" />
            </div>
        </form>
        <a href="#" class="btn-green">Adicionar vaga</a>
    </div>

