@model backend.Models.Experiencia
@{
    ViewBag.Title = "Cadastrar Nova Experiencia";
}
<div class="row">
    <div class="col-md-6">
        <h1>Cadastrar Nova Experiencia</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/Experiencia/CadastrarAction" method="post" class="jValidator">
            <div class="mb-3">
                <label for="cargo" class="form-label">Cargo *</label>
                <input name="cargo" type="text" class="form-control" id="cargo" data-rules="required|min:3|max:50">
            </div>
            <div class="mb-3">
                <label for="empregador" class="form-label">Empregador *</label>
                <input name="empregador" type="text" class="form-control" id="empregador" data-rules="required|min:3|max:100">
            </div>
            <div class="form-floating mb-3">
                <textarea name="resumo" class="form-control" placeholder="Resumo das atividades" id="floatingTextarea2" style="height: 200px" data-rules="required|min:20|max:1000"></textarea>
                <label for="floatingTextarea2">Resumo das atividades *</label>
            </div>
            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                <input type="checkbox" class="btn-check" id="empregoAtual" autocomplete="off" onchange="checkToggle()">
                <label class="btn btn-outline-primary" for="empregoAtual">Emprego Atual</label>
            </div>
            <div class="mb-3">
                <label for="admissao" class="form-label">Admissao *</label>
                <input name="admissao" type="date" class="form-control" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" id="admissao" data-rules="required">
            </div>
            <div class="mb-3">
                <label for="demissao" class="form-label">Demissao *</label>
                <input name="demissao" type="date" class="form-control" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" id="demissao" data-rules="required">
            </div>
            <button type="submit" class="btn btn-success">Cadastrar Experiência</button>
        </form>
    </div>
</div>
<script src="~/Scripts/validator.js"></script>