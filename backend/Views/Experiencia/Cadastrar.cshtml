@model backend.Models.Experiencia
@{
    ViewBag.Title = "Cadastrar Nova Experiencia";
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<div id="users-container" class="dashboard-container">
    <h1 class="page-title"><a href="/Curriculo/MeuCurriculo"><</a> Cadastrar experiência</h1>
    <div class="form-experiencia-formacao">
        <form action="/Experiencia/CadastrarAction" method="post" class="">
            <div class="input-container">
                <label for="cargo">Cargo</label>
                <input name="cargo" type="text" id="cargo" />
            </div>
            <div class="input-container">
                <label for="empregador">Empregador</label>
                <input name="empregador" type="text" id="empregador" />
            </div>
            <div class="input-container">
                <label for="admissao">Admissão</label>
                <input name="admissao" type="text" id="admissao" />
            </div>
            <div class="input-container">
                <label for="demissao">Demissão</label>
                <input name="demissao" type="text" id="demissao" />
                <div class="checkbox-container">
                    <input name="empregoAtual" type="checkbox" id="empregoAtual" onchange="checkToggle()" />
                    <label for="empregoAtual">Emprego atual</label>
                </div>
            </div>
            <div class="input-container">
                <label for="resumo">Resumo das atividades</label>
                <textarea name="resumo" id="resumo"></textarea>
            </div>
            <button type="submit" class="btn-form">Cadastrar</button>
        </form>
    </div>
</div>
<script src="~/Content/Js/Helpers/input-helper.js"></script>

