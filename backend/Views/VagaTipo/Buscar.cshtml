@model IEnumerable<backend.Models.VagaTipo>
@{
    ViewBag.Title = "Buscar tipos de vagas";
}
<div class="row my-3">
    <div class="col-md">
        <h1>Listando todos os tipos de Vaga</h1>
        <h4>Você pode utilizar a busca para filtrar por descrição</h4>
        @if (@TempData["alertInfo"] != null) {
            <div class="alert alert-info" role="alert">
                @TempData["alertInfo"]
            </div>
        }
        @if (@TempData["alertSucesso"] != null) {
            <div class="alert alert-success" role="alert">
                @TempData["alertSucesso"]
            </div>
        }
        @if (@TempData["alertErro"] != null) {
            <div class="alert alert-danger" role="alert">
                @TempData["alertErro"]
            </div>
        }
    </div>
</div>
<div class="row mb-4">
    <div class="col-md">
        @Html.ActionLink("Cadastrar Novo Tipo de Vaga", "Cadastrar", "VagaTipo", new { area = "" }, new { @class = "btn btn-success" })
    </div>
</div>
<div class="row">
    <div class="col-md">
        <form action="/VagaTipo/Buscar" method="get">
            <div class="input-group mb-3">
                <input name="descricao" type="text" class="form-control" placeholder="Ex: CLT" aria-label="Ex: CLT" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th scope="col" width="200">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vagaTipo in Model) {
                    <tr>
                        <th scope="row">@Html.DisplayFor(id => vagaTipo.Id)</th>
                        <td>@Html.DisplayFor(nome => vagaTipo.Descricao)</td>
                        <td>
                            @Html.ActionLink(" ", "Editar", "VagaTipo", new { id = vagaTipo.Id }, new { @class = "btn btn-warning far fa-edit" })
                            @Html.ActionLink(" ", "Apagar", "VagaTipo", new { id = vagaTipo.Id }, new { @class = "btn btn-danger far fa-trash-alt" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

