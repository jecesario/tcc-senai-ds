@model IEnumerable<backend.Models.Curso>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/Css/login-and-signup.css" />
    <title>Cadastro - Portal de Empregabilidade Senai</title>
</head>
<body>
    <main id="container-signin-and-signout">
        <section class="intro-bg">
            <div class="background"></div>
            <div class="content">
                <div class="logo">
                    <img src="~/Content/Images/logo.png" alt="logo negativada senai" />
                </div>
                <div class="intro-title">
                    <h1>Portal de Empregabilidade Senai</h1>
                    <h2>
                        Feito de alunos para alunos e professores com o objetivo de conectar empresas e candidatos à vagas.
                    </h2>
                </div>
                <p class="copyright">
                    SENAI - Serviço Nacional de Aprendizagem Industrial © Todos os
                    direitos reservados.
                </p>
            </div>
        </section>
        <section class="form-container">
            @if (@TempData["alertInfo"] != null) {
                <div class="alert alert-info" role="alert">
                    @TempData["alertInfo"]
                </div>
            }
            @if (@TempData["alertSucesso"] != null) {
                <div class="alert alert-success" role="alert">
                    @TempData["alertSucesso"]
                </div>
            }
            @if (@TempData["alertErro"] != null) {
                <div class="alert alert-danger" role="alert">
                    @TempData["alertErro"]
                </div>
            }
            <form action="/Home/CadastrarAction" method="post">
                <div class="form-title">
                    <h1>Cadastrar</h1>
                    <h2>Preencha os campos abaixo para criar seu usuário</h2>
                </div>

                <div class="input-container">
                    <label for="name">Nome</label>
                    <input name="nome" type="text" id="name" />
                </div>

                <div class="input-container">
                    <label for="email">Email</label>
                    <input name="email" type="email" id="email" />
                </div>

                <div class="input-container">
                    <label for="password">Senha</label>
                    <input name="senha" type="password" id="password" />
                </div>

                <div class="input-container">
                    <label for="curso">Curso</label>
                    <select name="curso" id="curso">
                        <option value="0" selected></option>
                        @foreach (var curso in Model) {
                            <option value="@Html.DisplayFor(id => curso.Id)">@Html.DisplayFor(id => curso.Nome)</option>
                        }
                    </select>
                </div>

                <div class="input-container">
                    <label for="turma">Turma</label>
                    <input name="turma" type="text" id="turma" />
                </div>

                <div class="input-container">
                    <label for="year">Ano</label>
                    <input name="ano" type="text" id="year" />
                </div>

                <button type="submit">Criar conta</button>
                <h3 class="create-account">
                    Já tem uma conta ?
                    @Html.ActionLink("Entre", "Entrar", "Home", new { area = "" }, new { @class = "d-block text-center mt-2 small" })
                </h3>
            </form>
        </section>
    </main>
    <script src="~/Content/Js/Helpers/input-helper.js"></script>
</body>
</html>
