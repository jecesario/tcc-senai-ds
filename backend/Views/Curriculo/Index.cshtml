@using PagedList.Mvc;
@model PagedList.PagedList<backend.Models.Dtos.ListarCurriculoResponse>
@{
    ViewBag.Title = "Listar Curriculos";
    var curriculos = Model;
}
<div class="row my-3">
    <div class="col-md">
        <h1>Listando todos os currículos</h1>
        <h4>Você pode utilizar a busca para filtrar por habilidades</h4>
        @if (@TempData["alertInfo"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["alertInfo"]
            </div>
        }
        @if (@TempData["alertSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["alertSucesso"]
            </div>
        }
        @if (@TempData["alertErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["alertErro"]
            </div>
        }
    </div>
</div>
