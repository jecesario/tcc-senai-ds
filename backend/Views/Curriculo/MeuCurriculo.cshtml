*@

@if (@TempData["alertInfo"] != null) {
    <div class="alert alert-info" role="alert">
        @TempData["alertInfo"]
    </div>
}
@if (@TempData["alertSucesso"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["alertSucesso"]
    </div>
}
@if (@TempData["alertErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["alertErro"]
    </div>
}

@if (usuario.Turma.IsEmpty() || usuario.Ano.IsEmpty() || usuario.CursoId.Equals("")) {
    <div class="alert alert-info mt-4" role="alert">
        <p class="mb-0">Epa, peraí! Parece que você não terminou de preencher seu perfil. Para começar a preencher seu currículo, é importante que seu perfil esteja completo.</p>
        @Html.ActionLink("Editar Perfil", "Editar", "Usuario", new { id = usuario.Id }, new { @class = "btn btn-warning mt-3" })
    </div>
} else {
    @*
        Se o usuário não estiver com as infomações iniciais do curriculo preenchidas, aparece uma mensagem para ele preencher as informações pessoais
    *@
