@model IEnumerable<backend.Models.Habilidade>
@{
    ViewBag.Title = "Meu Curriculo";
    var usuario = (backend.Models.Usuario)Session["usuario"];
    var curriculo = (backend.Models.Curriculo)ViewData["curriculo"]; ;
    var curso = (backend.Models.Curso)ViewData["curso"];
    var experiencias = ViewData["experiencias"] as List<backend.Models.Experiencia>;
    var formacoes = ViewData["formacoes"] as List<backend.Models.Formacao>;
    var habilidades = Model;
}
@*
    Se o usuário não estiver com o perfil completo, vai receber uma mensagem dizendo que ele precisa terminar de preencher o perfil.
*@
@if (usuario.Turma.IsEmpty() || usuario.Ano.IsEmpty() || usuario.CursoId.Equals(""))
{
    <div class="alert alert-info mt-4" role="alert">
        <p class="mb-0">Epa, peraí! Parece que você não terminou de preencher seu perfil. Para começar a preencher seu currículo, é importante que seu perfil esteja completo.</p>
        @Html.ActionLink("Editar Perfil", "Editar", "Usuario", new { id = usuario.Id }, new { @class = "btn btn-warning mt-3" })
    </div>
}
else
{
    @*
        Se o usuário não estiver com as infomações iniciais do curriculo preenchidas, aparece uma mensagem para ele preencher as informações pessoais
    *@
    if (curriculo == null)
    {
        <div class="p-5 my-4 bg-light rounded-3">

            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Sem currículo cadastrado!</h1>
                <p class="col-md-8 fs-4">Parece que você não tem nenhum currículo cadastrado, você pode começar a cadastrar seu currículo na base de dados do Senai clicando no botão abaixo.</p>
                @Html.ActionLink("Começar", "Cadastrar", "Curriculo", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    }
    else
    {
        @*
            Se o usuário estiver com os dados iniciais do curriculo preenchidos, vai exibir o curriculo dele ;)
        *@
        <h1 class="mb-3">Meu currículo</h1>
        <div class="p-5 my-4 bg-light rounded-3">
            <div class="container-fluid">
                @if (@TempData["alertInfo"] != null)
                {
                    <div class="alert alert-info" role="alert">
                        @TempData["alertInfo"]
                    </div>
                }
                @if (@TempData["alertSucesso"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["alertSucesso"]
                    </div>
                }
                @if (@TempData["alertErro"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["alertErro"]
                    </div>
                }

                @if (experiencias == null)
                {
                    <div class="alert alert-info mt-4" role="alert">
                        <p class="mb-0">Epa, peraí! Parece que você não preencheu nenhuma experiência profissional.</p>
                        <p class="mb-0">Dica: Você pode preencher com trabalhos informais ou voluntário, o importante é transmitir suas experiencias.</p>
                        @Html.ActionLink("Adicionar Experiencia", "Cadastrar", "Experiencia", new { area = "" }, new { @class = "btn btn-warning mt-3" })
                    </div>
                }

                @if (formacoes == null)
                {
                    <div class="alert alert-info mt-4" role="alert">
                        <p class="mb-0">Epa, peraí! Parece que você não preencheu nenhuma formação.</p>
                        <p class="mb-0">Dica: Você pode preencher com cursos profissionalizantes, online, faculdade ou o próprio curso que você faz no Senai.</p>
                        @Html.ActionLink("Adicionar Formação", "Cadastrar", "Formacao", new { area = "" }, new { @class = "btn btn-warning mt-3" })
                    </div>
                }
                <div class="row">
                    <div class="col-md d-flex justify-content-end">
                        @Html.ActionLink("Editar Perfil", "Editar", "Usuario", new { id = usuario.Id }, new { @class = "btn btn-warning mx-2" })
                        @Html.ActionLink("Editar Currículo/Habilidades", "Editar", "Curriculo", new { id = curriculo.Id }, new { @class = "btn btn-warning" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <h4>Informações Pessoais</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        Nome: @usuario.Nome <br />
                        @curso.Nome (@usuario.Turma - @usuario.Ano)
                    </div>
                    <div class="col-md">
                        Email: @usuario.Email <br />
                        Telefone: @curriculo.Telefone
                    </div>
                    <div class="col-md">
                        Endereço: @curriculo.Endereco <br />
                        @curriculo.Cidade/@curriculo.Estado
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        Linkedin: <a href="@curriculo.Linkedin">@curriculo.Linkedin</a> <br />
                        GitHub: <a href="@curriculo.Github">@curriculo.Github</a>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md">
                        Resumo: <br />
                        @curriculo.Resumo
                    </div>
                </div>
            </div>
        </div>
        <div class="p-5 my-4 bg-light rounded-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md">
                        <h4>Habilidades</h4>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md">
                        @foreach (var habilidade in habilidades)
                        {
                            <button type="button" class="btn btn-dark disabled mb-3">@Html.DisplayFor(nome => habilidade.Nome)</button>
                        }
                    </div>
                </div>
            </div>
        </div>

        if (experiencias != null)
        {
            <div class="p-5 my-4 bg-light rounded-3">
                <div class="container-fluid">
                    <div class="row mb-5">
                        <div class="col-md d-flex justify-content-between align-items-center">
                            <h4>Experiencias</h4>
                            @Html.ActionLink("Adicionar Experiencia", "Cadastrar", "Experiencia", new { area = "" }, new { @class = "btn btn-warning mt-3" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md">
                            @foreach (var experiencia in experiencias)
                            {
                                <div class="row">
                                    <div class="col-md">
                                        Empregador: @experiencia.Empregador
                                    </div>
                                    <div class="col-md">
                                        Cargo: @experiencia.Cargo
                                    </div>
                                    <div class="col-md">
                                        Admissão: @experiencia.Admissao
                                    </div>
                                    <div class="col-md">
                                        Demissão: @experiencia.Demissao
                                    </div>
                                    <div class="col-md-2">
                                        @Html.ActionLink(" ", "Editar", "Experiencia", new { id = experiencia.Id }, new { @class = "btn btn-warning far fa-edit" })
                                        @Html.ActionLink(" ", "Apagar", "Experiencia", new { id = experiencia.Id }, new { @class = "btn btn-danger far fa-trash-alt" })
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-md">
                                        Resumo: @experiencia.Resumo
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }


        if (formacoes != null)
        {
            <div class="p-5 my-4 bg-light rounded-3">
                <div class="container-fluid">
                    <div class="row mb-5">
                        <div class="col-md d-flex justify-content-between align-items-center">
                            <h4>Formações</h4>
                            @Html.ActionLink("Adicionar Formação", "Cadastrar", "Formacao", new { area = "" }, new { @class = "btn btn-warning mt-3" })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md">
                            @foreach (var formacao in formacoes)
                            {
                                <div class="row">
                                    <div class="col-md">
                                        Curso: @formacao.Nome
                                    </div>
                                    <div class="col-md">
                                        Instituição: @formacao.Instituicao
                                    </div>
                                    <div class="col-md">
                                        Inicio: @formacao.Inicio
                                    </div>
                                    <div class="col-md">
                                        Conclusão: @formacao.Conclusao
                                    </div>
                                    <div class="col-md-2">
                                        @Html.ActionLink(" ", "Editar", "Formacao", new { id = formacao.Id }, new { @class = "btn btn-warning far fa-edit" })
                                        @Html.ActionLink(" ", "Apagar", "Formacao", new { id = formacao.Id }, new { @class = "btn btn-danger far fa-trash-alt" })
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-md">
                                        Resumo: @formacao.Resumo
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}


