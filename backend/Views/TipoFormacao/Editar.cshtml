@model backend.Models.TipoFormacao
@{
    ViewBag.Title = "Editar tipo de formação";
    var tipoFormacao = Model;
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<div id="users-container" class="dashboard-container">
    <h1 class="page-title"><a href="/TipoFormacao"><</a> Editar tipo de formação</h1>
    <div class="search">
        <form action="/TipoFormacao/EditarAction" method="post" class="form-single jValidator">
            <div class="input-container">
                <label for="nome">Tipo de formação</label>
                <input name="nome" type="text" id="nome" value="@tipoFormacao.Nome" data-rules="required|max:30" />
                <input name="id" type="hidden" id="id" value="@tipoFormacao.Id">
                <button type="submit" class="btn-form">Editar</button>
            </div>
        </form>
    </div>
</div>
<script src="~/Content/Js/validator.js"></script>
<script src="~/Content/Js/Helpers/input-helper.js"></script>