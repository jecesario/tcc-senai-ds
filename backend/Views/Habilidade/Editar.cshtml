@model backend.Models.Habilidade
@{
    ViewBag.Title = "Editar Habilidade";
}

<div class="row">
    <div class="col-md-6">
        <h1>Editar Habilidade</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/Habilidade/EditarAction" method="post">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome da Habilidade</label>
                <input name="nome" type="text" class="form-control" id="nome" value="@Model.Nome">
                <input name="id" type="hidden" class="form-control" id="id" value="@Model.Id">
            </div>
            <button type="submit" class="btn btn-success">Editar Habilidade</button>
        </form>
    </div>
</div>