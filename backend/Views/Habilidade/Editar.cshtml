@model backend.Models.Habilidade
@{
    ViewBag.Title = "Editar Habilidade";
    var habilidade = Model;
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<div id="users-container" class="dashboard-container">
    <h1 class="page-title"><a href="/Habilidade"><</a> Editar habilidade</h1>
    <div class="search">
        <form action="/Habilidade/EditarAction" method="post" class="form-single jValidator">
            <div class="input-container">
                <label for="nome">Habilidade</label>
                <input name="nome" type="text" id="nome" value="@habilidade.Nome" data-rules="required|max:30" />
                <input name="id" type="hidden" id="id" value="@habilidade.Id">
                <button type="submit" class="btn-form">Editar</button>
            </div>
        </form>
    </div>
</div>
<script src="~/Content/Js/validator.js"></script>
<script src="~/Content/Js/Helpers/input-helper.js"></script>