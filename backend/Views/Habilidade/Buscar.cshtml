@using PagedList.Mvc;
@model PagedList.PagedList<backend.Models.Habilidade>
@{
    ViewBag.Title = "Buscar Habilidade";
    var habilidades = Model;
}

@if (@TempData["alertInfo"] != null) {
    <div class="alert alert-info" role="alert">
        @TempData["alertInfo"]
    </div>
}
@if (@TempData["alertSucesso"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["alertSucesso"]
    </div>
}
@if (@TempData["alertErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["alertErro"]
    </div>
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<div id="users-container" class="dashboard-container">
    <h1 class="page-title"><a href="/Habilidade"><</a> Buscar habilidade</h1>
    <div class="search">
        <form action="/Habilidade/Buscar" method="get">
            <div class="input-container">
                <label for="buscar">Pesquisar</label>
                <input name="nome" type="text" id="buscar" value="@Request.Params["nome"]" />
            </div>
        </form>
        <a href="/Habilidade/Cadastrar" class="btn-green">Adicionar habilidade</a>
    </div>
    <h2 class="search-word">Você buscou por: <span>@Request.Params["nome"]</span></h2>
